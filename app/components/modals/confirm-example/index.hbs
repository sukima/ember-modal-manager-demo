<Modal @manager={{@manager}}>
  {{! template-lint-disable no-autofocus-attribute }}

  <header>
    <h1>Example Yes/No Dialog</h1>
    <button type="button" {{on "click" @manager.cancel}}>&cross;</button>
  </header>

  <article>
    <p>Do you like <strong>pancakes</strong>?</p>
  </article>

  <footer>
    <button class="danger" type="button"
      {{on "click" (fn @manager.reject "I do not like pancakes.")}}
    >
      No
    </button>
    <button class="primary" type="button" autofocus
      {{on "click" (fn @manager.confirm "I love pancakes.")}}
    >
      Yes
    </button>
  </footer>
</Modal>
